@model waBanhang.Models.phieudathang

@{
    ViewBag.Title = "xemGiohang";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Thông tin giỏ hàng</h2>
<hr />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Mã hàng</th>
            <th>Tên hàng</th>
            <th>Đơn vị tính</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.chitietphieudathangs)
        {
        <tr>
            <td>@item.mahang</td>
            <td>@item.hanghoa.tenhang</td>
            <td>@item.hanghoa.donvitinh</td>
            <td>@item.dongia</td>
            <td>@item.soluong</td>
            <td>@(item.soluong.Value*item.dongia.Value)</td>
            <td> @Html.ActionLink("Xoá", "xoaHanghoa", "Home", new { id = item.mahang }, new { @class = "btn btn-primary" })</td>
        </tr>
        }
    </tbody>
</table>

